{
  "name": "KeyPaws",
  "main": "index.js",
  "version": "0.1.0",
  "show_in_taskbar": false,
  "build": {
    "appId": "com.aliblackwell.KeyPaws",
    "nwVersion": "0.42.6",
    "packed": true,
    "targets": [
      "nsis7z"
    ],
    "strippedProperties": [
      "build"
    ],
    "outputPattern": "${NAME} ${VERSION} ${PLATFORM} ${ARCH}",
    "mac": {
      "displayName": "KeyPaws",
      "copyright": "copyright",
      "icon": "./app/assets/icons.icns",
      "plistStrings": {
        "CFBundleName": "KeyPaws",
        "CFBundleIdentifier": "com.aliblackwell.KeyPaws",
        "CFBundleDocumentTypes": []
      }
    },
    "nsis": {
      "installDirectory": "$PROGRAMFILES\\${_COMPANYNAME}\\${_APPNAME}",
      "diffUpdaters": true
    }
  },
  "window": {
    "show_in_taskbar": false,
    "kiosk": false
  },
  "dependencies": {
    "nw": "^0.42.6"
  },
  "scripts": {
    "start": "nw --enable-logging=stderr",
    "update": "cp index.js ./dist/KeyPaws\\ 0.1.0\\ mac\\ x64/KeyPaws.app/Contents/Resources/app.nw/index.js && cp ./app/*.html ./app/*.css ./dist/KeyPaws\\ 0.1.0\\ mac\\ x64/KeyPaws.app/Contents/Resources/app.nw/app/",
    "build:python": "pyinstaller ./listener/keypaws.py ./listener/kaybord.spec && cp ./model/KeyPaws.mlproj/Models/KeyPaws\\ 3.mlmodel ./dist/keypaws/keypaws.mlmodel",
    "build:trigger": "pyinstaller ./listener/trigger.py ./listener/kaybord.spec",
    "build": "mv ./dist ./background && build --tasks mac-x64 --mirror https://dl.nwjs.io/ . && rm -rf ./dist/KeyPaws\\ 0.1.0\\ mac\\ x64/KeyPaws.app/Contents/Resources/app.nw/node_modules && chmod 775 ./dist/KeyPaws\\ 0.1.0\\ mac\\ x64/KeyPaws.app/Contents/Resources/app.nw/background/keypaws/keypaws ./dist/KeyPaws\\ 0.1.0\\ mac\\ x64/KeyPaws.app/Contents/Resources/app.nw/background/trigger/trigger",
    "clean": "rm -rf ./dist/ ./background/ ./build/",
    "sign": "codesign --options runtime --entitlements entitlements.plist --force --verbose=4 --sign 'Developer ID Application: Alasdair Blackwell (6B4HNA4Z97)' --deep ./dist/KeyPaws\\ 0.1.0\\ mac\\ x64/KeyPaws.app",
    "verify": "codesign --verify --deep --strict --verbose=2 ./dist/KeyPaws\\ 0.1.0\\ mac\\ x64/KeyPaws.app",
    "is-entitled": "codesign -dvvv --entitlements :- ./dist/KeyPaws\\ 0.1.0\\ mac\\ x64/KeyPaws.app/",
    "zip": "zip -r ./dist/KeyPaws.zip ./dist/KeyPaws\\ 0.1.0\\ mac\\ x64/KeyPaws.app/",
    "notarize": "xcrun altool -t osx -f './dist/KeyPaws.zip' --primary-bundle-id com.aliblackwell.KeyPaws --notarize-app --verbose -itc_provider 6B4HNA4Z97 --username aliblackwell@protonmail.com",
    "staple": "xcrun stapler staple ./dist/KeyPaws\\ 0.1.0\\ mac\\ x64/KeyPaws.app",
    "clear-settings": "rm -rf /Users/aliblackwell/Library/Application Support/KeyPaws/Default/my-settings-file.json"
  },
  "devDependencies": {
    "nwjs-builder-phoenix": "^1.15.0"
  }
}
